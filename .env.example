# Short Gainers Agent Configuration
# Copy this file to .env and fill in your values

# Required: Alpha Vantage API Key
# Get one free at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_api_key_here

# Optional: Rate Limiting
# Free tier allows 5 calls/minute, 500 calls/day
# API_RATE_LIMIT_PER_MINUTE=5
# API_CALL_DELAY_SECONDS=12.5

# Optional: Caching
# CACHE_ENABLED=true
# CACHE_TTL_SECONDS=300
# CACHE_DIRECTORY=.cache

# Optional: Analysis Thresholds
# MIN_MARKET_CAP=200000000
# MIN_VOLUME=100000
# MIN_CHANGE_PERCENT=10.0

# Optional: Scoring Thresholds
# ACTIONABLE_SCORE_THRESHOLD=6.0
# HIGH_SCORE_THRESHOLD=7.5

# Optional: Output
# OUTPUT_DIRECTORY=./output

# Optional: Logging
# LOG_LEVEL=INFO
